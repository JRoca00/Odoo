<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="account_move_project" model="ir.ui.view">
            <field name="name">account.move.project</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="enable_project" widget="boolean_toggle"/>
                    <field name="project_id" attrs=" {'invisible': [ ('enable_project', '=', False)], 'required': [('enable_project', '=', True)]}" options="{'no_create': True, 'no_create_edit':True}"/>
                </xpath>
            </field>
        </record>
        

        <record id="project_project_invoice" model="ir.ui.view">
            <field name="name">project.project.invoice</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='description']" position="after"> 
                    <page name="invoices_project" string="Facturas" >
                        <field name="invoices_project" options="{'no_create': True, 'no_create_edit':True}">
                            <!-- <tree>
                                <field name ="name" string="Factura"/>
                                <field name ="date" string="Fecha" readonly="1"/>
                                <field name ="invoice_partner_display_name" string="Cliente/Proveedor"/>
                                <field name ="amount_total_signed" sum="amount_total_signed" string="Total"/>
                            </tree> -->
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo> 