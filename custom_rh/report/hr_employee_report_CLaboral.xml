<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="CLaboral_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td colspan="2">
                                <p style="display: block; margin-bottom: 80px; font-size: 1px;">.</p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <t t-set="current_date" t-value="datetime.datetime.now()"/>
                                <h5 style="display: block; margin-bottom: 110px; text-align: right;  width: 98%;">Guatemala,  
                                <t t-esc="current_date.strftime('%d de ')"/>
                                <t t-esc="current_date.strftime('%B de %Y')"/></h5>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <h5 style="display: block; margin-bottom: 80px; font-weight: bold;">A QUIEN INTERESE:</h5>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <t t-set="start_date" t-value="doc.first_contract_date"/>
                                <p style="display: block; margin-bottom: 50px; text-align: justify; font-size: 20px;">Por este medio hacemos de su conocimiento que el Sr. <b><t t-esc="doc.name"/>,</b> 
                                quien se identifica con el Documento Personal número <t t-esc="doc.identification_id"/> ,  
                                <t t-if="doc.contract_ids.date_end">
                                    laboró para
                                </t>
                                <t t-else="">
                                    labora para
                                </t>
                               
                                la empresa <t t-esc="doc.address_id.name"/> ocupando el puesto de  <b> <t t-esc=" doc.contract_ids.name"/>,</b> desde <t t-esc="start_date.strftime('el %d de %B del %Y')"/> hasta  
                                <t t-if="doc.contract_ids.date_end">
                                    <t t-set="end_date" t-value="doc.contract_ids.date_end"/>
                                    <t t-esc="end_date.strftime('el %d de %B del %Y, ')"/>
                                </t>
                                <t t-else="">
                                    el día de hoy, 
                                </t>
                                devengando un salario mensual de <span t-field="doc.contract_ids.wage" t-field-options='{"widget": "monetary"}'/>.</p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <t t-set="current_date" t-value="datetime.datetime.now()"/>
                                <p style="display: block; margin-bottom: 125px; text-align: justify; width: 98%; font-size: 20px;">Para los usos legales que el interesado convenga se extiende la presente
                                constancia laboral a los <t t-esc="current_date.strftime('%d días del mes de ')"/>
                                <t t-esc="current_date.strftime('%B del %Y')"/></p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <p style="display: block; margin-bottom: 75px; font-weight: bold;font-size: 20px;">Atentamente,</p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <t t-set="current_user" t-value="env.user.name" />
                                <t t-set="job_user" t-value="env.user.partner_id.function" />
                                <p style="display: block; margin-bottom: 30px; font-weight: bold; font-size: 20px;"><t t-esc="current_user" /><br/><t t-esc="job_user" /></p>
                            </td>
                        </tr>
                          
                        <div class="footer">
                            <tr>
                                <td colspan="2">
                                    <h1 style="text-align: center; color: skyblue;">________________________________________________</h1>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <p style="display: block; margin-bottom: 30px; text-align: center;"><t t-esc="doc.address_id.name"/> <br/> Oficinas Centrales: (502)<t t-esc="doc.address_id.phone"/> <br/> 
                                    <t t-esc="doc.address_id.website"/> <b>|</b> <t t-esc="doc.address_id.street"/>, <t t-esc="doc.address_id.street2"/>, <t t-esc="doc.address_id.state_id.name"/></p>
                                </td>
                            </tr>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>