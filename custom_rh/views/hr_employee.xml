<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="hr_employee_liquidacion" model="ir.ui.view">
            <field name="name">hr.employee.liquidacion</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="work_email" position="after">
                    <field name="vac" string="Vacaciones Autorizadas"/>
                </field>
            </field>
        </record>

        <record id="hr_leave_code" model="ir.ui.view">
            <field name="name">hr.leave.code</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code" string="CÃ³digo"/>
                </xpath>
            </field>
        </record>

        <record id="view_employee_prestaciones_tree" model="ir.ui.view">
            <field name="name">hr.employee.prestaciones.tree</field>
            <field name="model">hr.employee.pres</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employeeid"/>
                    <field name="reason"/>
                    <field name="average_salary" widget="monetary"/>
                    <field name="total" sum="total"/>
                    <field name="state" decoration-success="state == 'done'" decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_prestaciones_form" model="ir.ui.view">
            <field name="name">hr.employee.prestaciones.form</field>
            <field name="model">hr.employee.pres</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="btn_done" string="Publicar" type="object" class="btn-primary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employeeid" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="vac_employee" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="average_salary" widget="monetary" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="pending_salary" widget="monetary" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                            </group>
                            <group>
                                <field name="last_bono14" string="Fecha Ultimo Bono 14" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="last_aguinaldo" string="Fecha Ultimo Aguinaldo" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="reason" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <button name="prestaciones_tot" string="Calcular" type="object" class="btn-primary" states="draft"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Totales" name="Totales">
                                <group>
                                    <group>
                                        <field name="tot_indemnizacion" readonly="1" attrs="{'invisible': [('reason', '=', 'Renuncia')]}"/>
                                        <field name="tot_bono14" readonly="1"/>
                                        <field name="tot_aguinaldo" readonly="1"/>
                                        <field name="tot_vac" readonly="1"/>
                                        <field name="total" string="Total" readonly="1" decoration-success="total  > 0.0"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <!-- Followers view -->
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <!-- Chatter view -->
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_employee_prestaciones" model="ir.actions.act_window">
            <field name="name">Prestaciones</field>
            <field name="res_model">hr.employee.pres</field>
            <field name="view_mode">list,form</field>
        </record>

   <menuitem
            id="menu_hr_employee_pres"
            name="Prestaciones"
            parent="hr.menu_hr_root"
            sequence="4"
            action="action_employee_prestaciones"
            />
    </data>
</odoo> 