<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Vista del formulario del modelo sale -->
    <record model="ir.ui.view" id="wizard_sale">
      <field name="name">wizard.sale</field>
      <field name="model">wizard.sale</field>
      <field name="arch" type="xml">
        <form string="Cliente wizard">
            <group>
                <group>
                    <field name="partner_id"/>
                </group>
                <group>
                    <field name="product_id"/>
                </group>
            </group>
            <footer>
                <button name="action_print" string="Print" type="object" class="btn-secondary"/>    
                <button name="action_print" string="Print" type="object" class="btn-secondary"/>
                <button string="Cancel" class="btn-default" special="cancel"/>
            </footer>
        </form>
      </field>
    </record>

    <!-- AcciÃ³n del wizard -->
    <record model="ir.actions.act_window" id="action_wizard_sale">
      <field name="name">WizardSale</field>
      <field name="res_model">wizard.sale</field> <!-- Corregir el nombre del modelo -->
      <field name="view_mode">form</field>
      <field name="view_id" ref="wizard_sale"/>
      <field name="target">new</field>
    </record>


    <menuitem name="menu wizard" parent="sale.sale_menu_root" id="menu_wizard" action="action_wizard_sale"/>

  </data>
</odoo>














