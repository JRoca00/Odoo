<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Vista asignacion de codigo empleado-->
        <record id="id_empl" model="ir.ui.view">
            <field name="name">id.empl</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <button name="generate_random_barcode" position="replace">
                    <button string="Generate" class="btn btn-link" type="object" name="generate_random_barcode" attrs="{'invisible': ['|', ('barcode', '==', False),('barcode', '!=', False)]}"/>
                </button>
                <!-- <field name="user_id" position="after">
                    <field name="codigo_empleado"/>
                </field>Igual esta quitarla si es en cassesa-->
                <header>
                    <button name="update_codigo_empleado" string="Asignar Código" type="object" class="btn btn-primary" attrs="{'invisible': [('barcode', '!=', False)]}"/>
                </header>
            </field>
        </record>

        <!--Vista en ajustes para asignar el numero-->
        <record id="view_hr_employee_settings_form_cod" model="ir.ui.view">
            <field name="name">hr.employee.settings.form.cod</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='hr_presence_options']" position="after">
                    <h2>Codigo de Empleado</h2>
                    <p>Siguiente código a ser asignado:</p>
                    <div class="col 12 col-lg-6 o_setting_box">
                        <field name="cod_emp" string="Código empleado"/>
                    </div>
                </xpath>    
            </field>
        </record>

        <!--Cantidad Vacaciones, pesataña de finiquito laboral y de vacaiones-->
        <record id="hr_employee_liquidacion" model="ir.ui.view">
            <field name="name">hr.employee.liquidacion</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="work_email" position="after">
                    <field name="vac" string="Días de Vacaciones"/>
                </field>
                <notebook>
                    <page string="Liquidaciones" name="Liquidaciones">
                        <group string="Laboral">
                            <field name="employee_fin" string="Finiquito Laboral"/>
                        </group>
                        <group string="Vacaciones">
                            <field name="vac_list" string="Liquidación de Vacaciones">
                                <tree>
                                    <field name="name" string="Solicitud"/>
                                    <field name="employeeid"/>
                                    <field name="type_vac"/>
                                    <field name="period"/>
                                    <field name="tot_vac" string="Total Pagado" sum="total"/>
                                    <field name="state" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


        <!--Vista Liquidacion laboral tree-->
        <record id="view_employee_prestaciones_tree" model="ir.ui.view">
            <field name="name">hr.employee.prestaciones.tree</field>
            <field name="model">hr.employee.pres</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Referencia"/>
                    <field name="employeeid"/>
                    <field name="create_date" widget="date"/>
                    <field name="reason"/>
                    <field name="average_salary"/>
                    <field name="total" sum="total" string="Total"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="search_pres" model="ir.ui.view">
            <field name="name">search_pres</field>
            <field name="model">hr.employee.pres</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employeeid"/>
                    <field name="name" string="Referencia"/>
                    <field name="reason" />
                </search>
            </field>
        </record>

        <!--Formulario Liquidacion laboral form-->
        <record id="view_employee_prestaciones_form" model="ir.ui.view">
            <field name="name">hr.employee.prestaciones.form</field>
            <field name="model">hr.employee.pres</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="btn_done" string="Publicar" type="object" class="btn-primary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <group>
                                <field name="employeeid" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="vac_employee" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="average_salary" widget="monetary" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="pending_salary" widget="monetary" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                            </group>
                            <group>
                                <field name="last_bono14" string="Fecha Ultimo Bono 14" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="last_aguinaldo" string="Fecha Ultimo Aguinaldo" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="reason" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <button name="prestaciones_tot" string="Calcular" type="object" class="btn-primary" states="draft"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Totales" name="Totales">
                                <group>
                                    <group>
                                        <field name="tot_indemnizacion" readonly="1" attrs="{'invisible': [('reason', '=', 'Renuncia')]}"/>
                                        <field name="tot_bono14" readonly="1"/>
                                        <field name="tot_aguinaldo" readonly="1"/>
                                        <field name="tot_vac" readonly="1"/>
                                        <field name="sal_pen" readonly="1"/>
                                        <field name="total" string="Total" readonly="1" decoration-success="total  > 0.0"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Vistas Liquidacion laboral-->
        <record id="action_employee_prestaciones" model="ir.actions.act_window">
            <field name="name">Liquidación Laboral</field>
            <field name="res_model">hr.employee.pres</field>
            <field name="view_mode">list,form</field>
        </record>


        <!--Vista Liquidacion Vacaciones tree-->
        <record id="view_employee_vac_tree" model="ir.ui.view">
            <field name="name">hr.employee.vac.tree</field>
            <field name="model">hr.employee.vac</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Referencia"/>
                    <field name="employeeid"/>
                    <field name="type_vac"/>
                    <field name="create_date" widget="date"/>
                    <field name="period"/>
                    <field name="tot_vac" sum="total"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="search_vac" model="ir.ui.view">
            <field name="name">search_vac</field>
            <field name="model">hr.employee.vac</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employeeid"/>
                    <field name="name" string="Referencia"/>
                    <field name="period"/>
                    <field name="type_vac"/>
                </search>
            </field>
        </record>

        <!--Formulario Liquidacion Vacaciones form-->
        <record id="view_employee_vac_form" model="ir.ui.view">
            <field name="name">hr.employee.vac.form</field>
            <field name="model">hr.employee.vac</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="btn_done" string="Publicar" type="object" class="btn-primary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <group>
                                
                                <field name="employeeid" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="period" string="Período" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                            </group>
                            <group>
                                <field name="create_date" string="Fecha" required="1" widget="date" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="type_vac" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))]}"/>
                                <field name="tot_vac" required="1" attrs="{'readonly': [('state', 'in', ('done','canceled'))], 'invisible': [('type_vac', '=', 'Gozadas')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Totales" name="Totales">
                                
                                <field name="vac_list" >
                                    <tree>
                                        <field name="name" string="Período"/>
                                        <field name="employee_id"/>
                                        <field name="date_from" widget="date"/>
                                        <field name="date_to" widget="date"/>
                                        <field name="number_of_days" string="Días"/>
                                        <field name="holiday_status_id"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="vacg" readonly="1" string="Total de vacaciones gozadas" attrs="{'invisible': [('type_vac', '!=', 'Gozadas')]}"/>
                                    <field name="vac" readonly="1" string="Total de vacaciones Pagadas" attrs="{'invisible': [('type_vac', '!=', 'Pagadas')]}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Vistas Liquidacion laboral-->
        <record id="action_employee_vac" model="ir.actions.act_window">
            <field name="name">Liquidación de Vacaciones</field>
            <field name="res_model">hr.employee.vac</field>
            <field name="view_mode">list,form</field>
        </record>

        
        <menuitem
            id="menu_hr_employee_pres"
            name="Liquidaciones"
            parent="hr.menu_hr_root"
            sequence="4"
        />
        <menuitem
            id="menu_hr_employee_pres_sub1"
            name="Laboral"
            parent="menu_hr_employee_pres"
            sequence="1"
            action="action_employee_prestaciones"
        />
        <menuitem
            id="menu_hr_employee_pres_sub2"
            name="Vacaciones"
            parent="menu_hr_employee_pres"
            sequence="1"
            action="action_employee_vac"
        />

    </data>
</odoo> 